<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generator" Height="350" Width="600" Foreground="White" ResizeMode="NoResize">
    <Grid Height="319" Background="White">
          
        <StackPanel Orientation="Vertical">
            <Grid HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Choisir le(s) fichier(s) à décrypter :" />
                    <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" Width="188"/>
                    <Button Content="Parcourir..." HorizontalAlignment="Left" Width="83" Click="btn_parcourir_Click" Height="27"/>
                </StackPanel>
            </Grid>

            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <ListBox />
                    <Button Content="Envoyer" />
                </StackPanel>

                <StackPanel>
                    <TextBlock DockPanel.Dock="Right" Text="le texte décrypté" />
                </StackPanel>
            </DockPanel>

        </StackPanel>
        
    </Grid>
</Window>
